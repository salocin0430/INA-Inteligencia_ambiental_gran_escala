{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "iot:Connect",
      "Resource": "arn:aws:iot:us-east-1:670390577069:client/ttmi052-cliente-*"
    },
    {
      "Effect": "Allow",
      "Action": "iot:Publish",
      "Resource": ["arn:aws:iot:us-east-1:670390577069:topic/dispositivo/ttmi052/funcion/*/comandos"]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Subscribe",
      "Resource": ["arn:aws:iot:us-east-1:670390577069:topicfilter/dispositivo/ttmi052/funcion/*/info"]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Receive",
      "Resource": ["arn:aws:iot:us-east-1:670390577069:topic/dispositivo/ttmi052/funcion/*/info"]
    }
  ]
}