{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "iot:Connect",
      "Resource": "arn:aws:iot:us-east-1:931743417574:client/dispositivo2-*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "iot:Publish",
        "iot:Receive"
      ],
      "Resource": [
        "arn:aws:iot:us-east-1:931743417574:topic/$aws/things/dispositivo2/shadow/get",
        "arn:aws:iot:us-east-1:931743417574:topic/$aws/things/dispositivo2/shadow/get/accepted",
        "arn:aws:iot:us-east-1:931743417574:topic/$aws/things/dispositivo2/shadow/get/rejected",
        "arn:aws:iot:us-east-1:931743417574:topic/$aws/things/dispositivo2/shadow/update",
        "arn:aws:iot:us-east-1:931743417574:topic/$aws/things/dispositivo2/shadow/update/accepted",
        "arn:aws:iot:us-east-1:931743417574:topic/$aws/things/dispositivo2/shadow/update/rejected",
        "arn:aws:iot:us-east-1:931743417574:topic/$aws/things/dispositivo2/shadow/update/delta",
        "arn:aws:iot:us-east-1:931743417574:topic/$aws/things/dispositivo2/shadow/delete",
        "arn:aws:iot:us-east-1:931743417574:topic/$aws/things/dispositivo2/shadow/delete/accepted",
        "arn:aws:iot:us-east-1:931743417574:topic/$aws/things/dispositivo2/shadow/delete/rejected"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Subscribe",
      "Resource": [
        "arn:aws:iot:us-east-1:931743417574:topicfilter/$aws/things/dispositivo2/shadow/get/accepted",
        "arn:aws:iot:us-east-1:931743417574:topicfilter/$aws/things/dispositivo2/shadow/get/rejected",
        "arn:aws:iot:us-east-1:931743417574:topicfilter/$aws/things/dispositivo2/shadow/update/accepted",
        "arn:aws:iot:us-east-1:931743417574:topicfilter/$aws/things/dispositivo2/shadow/update/rejected",
        "arn:aws:iot:us-east-1:931743417574:topicfilter/$aws/things/dispositivo2/shadow/update/delta",
        "arn:aws:iot:us-east-1:931743417574:topicfilter/$aws/things/dispositivo2/shadow/delete/accepted",
        "arn:aws:iot:us-east-1:931743417574:topicfilter/$aws/things/dispositivo2/shadow/delete/rejected"
      ]
    }
  ]
}

