{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "iot:Connect",
      "Resource": "arn:aws:iot:us-east-1:931743417574:client/dispositivo2-*"
    },
    {
      "Effect": "Allow",
      "Action": "iot:Publish",
      "Resource": [
        "arn:aws:iot:us-east-1:931743417574:topic/test/*",
        "arn:aws:iot:us-east-1:931743417574:topic/my/*",
        "arn:aws:iot:us-east-1:931743417574:topic/dispositivo/dispositivo2/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Subscribe",
      "Resource": [
        "arn:aws:iot:us-east-1:931743417574:topicfilter/test/*",
        "arn:aws:iot:us-east-1:931743417574:topicfilter/my/*",
        "arn:aws:iot:us-east-1:931743417574:topicfilter/dispositivo/dispositivo2/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Receive",
      "Resource": [
        "arn:aws:iot:us-east-1:931743417574:topic/test/*",
        "arn:aws:iot:us-east-1:931743417574:topic/my/*",
        "arn:aws:iot:us-east-1:931743417574:topic/dispositivo/dispositivo2/*"
      ]
    }
  ]
}

